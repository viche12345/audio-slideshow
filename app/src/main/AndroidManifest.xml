<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.erraticduck.audioslideshow"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:hardwareAccelerated="true">
        <activity
            android:label="@string/app_name"
            android:name=".FileBrowser" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlideShow" android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"></activity>
        <activity android:name=".SettingsActivity" android:label="Settings"/>
    </application>
</manifest>